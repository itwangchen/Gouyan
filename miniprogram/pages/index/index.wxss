/**index.wxss**/

/* header 部分 */
page {
  background: #f5f5f5;
}
.header {
  background: #fff;
  padding: 0 24rpx;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #edece8;
  display: flex;
  justify-content: space-between;
}

.aret {
  font-size: 32rpx;
  position: relative;
}

.aret::after {
  position: absolute;
  right: -30rpx;
  top: 50%;
  transform: translateY(-20%);
  content: "";
  display: block;
  border-width: 10rpx;
  border-style: solid;
  border-color: transparent;
  border-top-color: black;
}

.play {
  display: flex;
  justify-content: center;
  flex: 1;
}

.play view {
  color: #6f6f6f;
  font-weight: 600;
  font-size: 34rpx;
  width: 160rpx;
}

.play view.active {
  color: #e54847;
}

.play view.active::after {
  content: "";
  display: block;
  height: 4rpx;
  width: 160rpx;
  border-bottom: 4rpx solid #e54847;
}

.search {
  height: 88rpx;
  width: 80rpx;
}

.i_icon {
  margin-top: 10rpx;
}
.items {
  background: #fff;
}
.items .item {
  display: flex;
  margin: 0 auto;
  width: 686rpx;
  height: 228rpx;
}

.items image {
  margin-top: 24rpx;
  height: 180rpx;
  width: 128rpx;
}

.items .xq {
  display: flex;
  height: 180rpx;
  width: 510rpx;
  padding: 24rpx 28rpx;
  border-bottom: 1px solid #edece8;
  position: relative;
}

.xq .introduce {
  width: 404rpx;
}

.xq .btn {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  font-size: 30rpx;
  text-align: center;
  line-height: 48rpx;
  color: #ffff;
  width: 88rpx;
  height: 48rpx;
  background: #e54847;
  border-radius: 10rpx;
}

.xq .btn.ys {
  background: #3c9fe6;
}

.introduce text {
  display: block;
  width: 404rpx;
  line-height: 1.8;
  font-size: 24rpx;
  color: #999;
  /* 文字换行省略点 */
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.introduce text.title {
  line-height: 2;
  font-size: 30rpx;
  font-weight: 600;
  color: black;
}

/* 待放映电影 */
.wrap {

  
}
.wrap scroll-view {
  background: #fff;
  /* 强制不换行 */
  white-space: nowrap;
  /* padding: 24rpx 0 24rpx 30rpx; */
  padding:0 30rpx;
  margin-bottom: 30rpx;
 
}

.wrap .cell image {
  width: 170rpx;
  height: 230rpx;
}

.wrap .cell {
  width: 170rpx;
  vertical-align: middle;
  margin-right: 20rpx;
  display: inline-block;
 
}
.wrap .cell text { 
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin: 0;
  line-height: 1.7;
  display: block;
  height: 44rpx;
}
.wrap .cell text.name {
  font-size: 26rpx;
  font-weight: 700;
}
.wrap .cell text.time,.wrap .cell text.look {
  font-size: 24rpx;
  color:#999; 
}

.wrap .cell:last-child {
  margin-right: 0;
   
}
.titl {
  background: #fff;
  display: block;
  font: 24rpx;
  padding:20rpx 30rpx;
}
